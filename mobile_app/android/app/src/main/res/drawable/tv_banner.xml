<?xml version="1.0" encoding="utf-8"?>
<!--
  Simple TV banner (320x180dp) using shape/gradient so we don't require a binary PNG.
  This will be shown on TV launchers. Replace with branded artwork later if desired.
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:width="320dp" android:height="180dp"/>
            <corners android:radius="12dp"/>
            <gradient
                android:startColor="#FF2563EB"
                android:endColor="#FF1E3A8A"
                android:angle="0" />
            <stroke android:width="2dp" android:color="#80FFFFFF"/>
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <size android:width="200dp" android:height="56dp"/>
            <corners android:radius="8dp"/>
            <solid android:color="#CCFFFFFF"/>
            <stroke android:width="1dp" android:color="#1F2937"/>
        </shape>
    </item>
</layer-list>
